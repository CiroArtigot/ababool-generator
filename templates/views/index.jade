extends layout

block content

  include ../ababool_plugins/preloader/index.jade
  include ../ababool_plugins/mainmenu/index.jade

  #pt-main(
    class="pt-perspective"
    ng-init="newpages=''; current='" + params[0].current + "'; token='" + params[0].token + "';debugger=''")

    - var thepages = pages
        each value, index in thepages
          if !value.ajax || index == params[0].current
            div(
            id= index
            ng-class= "theclass('" + index + "')"
            data-left= value.left
            data-right= value.right
            data-down= value.down
            data-up= value.up
            data-ajax = value.ajax
            animationend="endpage"
            class="pt-page " + value.class
            )
              div(
              class="container clearfix"
              )
                include pages/contents.jade

  include ../ababool_plugins/footer/index.jade
  include ../ababool_plugins/navigator/index.jade
